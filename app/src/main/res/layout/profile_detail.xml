<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- <include
          layout="@layout/app_bar_profile"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />-->

    <ImageView
        android:id="@+id/profile_image_viewdetail"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@mipmap/ic_launcher_round"/>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_textDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Git Username"
                android:labelFor="@id/username_textdetail"
                android:layout_marginLeft="@dimen/fab_margin"/>
            <TextView
                android:id="@+id/username_textdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/fab_margin"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/username_textdetail"
                android:background="#C5C5C5" />
            <TextView
                android:id="@+id/git_url_textdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:autoLink="all"
                android:layout_below="@id/username_textdetail"
                android:layout_marginLeft="@dimen/fab_margin"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/git_url_textdetail"
                android:background="#C5C5C5" />
            <TextView
                android:id="@+id/git_id_textdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@id/git_url_textdetail"
                android:layout_marginLeft="@dimen/fab_margin"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/git_url_textdetail"
                android:background="#C5C5C5" />
            <TextView
                android:id="@+id/git_avatarurl_textdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@id/git_id_textdetail"
                android:layout_marginLeft="@dimen/fab_margin"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
