<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp">
        <ImageView
            android:id="@+id/profile_image_viewdetail"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_round"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardElevation="1dp"
        card_view:contentPadding="8dp"
        card_view:cardCornerRadius="5dp">
        <TextView
            android:id="@+id/username_textDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/git_username"
            android:layout_marginLeft="@dimen/fab_margin"/>
        <View
            android:id="@+id/username_view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="#C5C5C5" />
        <TextView
            android:id="@+id/username_textdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="bottom"
            android:layout_below="@id/username_view_line"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/fab_margin"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardElevation="1dp"
        card_view:contentPadding="5dp"
        card_view:cardCornerRadius="5dp">
        <TextView
            android:id="@+id/git_url_textDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/git_url"
            android:layout_marginLeft="@dimen/fab_margin"/>
        <View
            android:id="@+id/url_view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="#C5C5C5" />
        <TextView
            android:id="@+id/git_url_textdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            android:autoLink="all"
            android:layout_gravity="bottom"
            android:layout_below="@id/url_view_line"
            android:layout_marginLeft="@dimen/fab_margin"/>
    </android.support.v7.widget.CardView>
<Button
    android:layout_width="320dp"
    android:layout_height="50dp"
    android:id="@+id/share_button"
    android:text="Share Profile"
    android:textAlignment="center"
    android:textColor="#FFFFFF"
    android:layout_gravity="center"
    android:src="@drawable/ic_menu_share"
    android:elevation="2dp"
    android:background="@color/colorPrimary" />
</LinearLayout>